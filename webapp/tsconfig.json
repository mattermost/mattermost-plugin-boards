{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2019",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "incremental": false,
        "baseUrl": "src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
		"src/**/*"
    ],
    "exclude": [
        ".git",
        "./node_modules/**",
        "dist",
        "pack"
    ]
}
